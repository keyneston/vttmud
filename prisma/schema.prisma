datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Character {
    id Int     @id @default(autoincrement())
    owner String
    name String
    avatar String?
	blob Json?
}

model CharacterLogEntry {
	id           Int       @id @default(autoincrement())
	characterID  Int
	experience   Int?
    gold         Decimal?  @db.Money
	description  String?
	createdAt    DateTime  @default(now())
	updatedAt    DateTime  @updatedAt
}
