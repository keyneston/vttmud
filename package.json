{
  "name": "vttmud-server",
  "version": "0.0.1",
  "private": true,
  "description": "Backend API for VTTMUD",
  "main": "serve.ts",
  "type": "module",
  "scripts": {
    "serve": "concurrently 'npm run watch' 'cd client && npm run start'",
    "run-backend": "ts-node src/serve.ts",
    "build": "npm i && webpack --env production build",
    "watch": "npm-watch run-backend",
    "test": "echo \"Error: no test specified\" && exit 1",
    "generate": "npx prisma generate",
    "migrate": "npx prisma migrate dev --name init"
  },
  "watch": {
    "run-backend": {
      "patterns": [
        "src/**/*.ts",
        "client/public/*",
        ".env"
      ],
      "quiet": false,
      "extensions": "js,jsx,ts,tsx,css,html,env"
    }
  },
  "author": "",
  "license": "",
  "dependencies": {
    "@prisma/client": "^4.12.0",
    "aws-sdk": "^2.1353.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "discord-oauth2": "^2.11.0",
    "dotenv": "^16.0.3",
    "experimental-prisma-webpack-plugin": "^0.0.5",
    "express": "^4.18.2",
    "express-requests-logger": "^4.0.0",
    "multer": "^1.4.5-lts.1",
    "multer-s3": "^3.0.1",
    "node-pg-migrate": "^6.2.2",
    "pg-native": "^3.0.1",
    "webpack-node-externals": "^3.0.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/express-requests-logger": "^3.0.1",
    "@types/multer": "^1.4.7",
    "@types/multer-s3": "^3.0.0",
    "@types/pg": "^8.6.6",
    "babel-loader": "^9.1.2",
    "concurrently": "^8.0.1",
    "copy-webpack-plugin": "^11.0.0",
    "npm-watch": "^0.11.0",
    "ts-loader": "^9.4.2",
    "webpack": "^5.77.0",
    "webpack-cli": "^5.0.1"
  }
}
