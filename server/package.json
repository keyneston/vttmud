{
  "name": "vttmud-server",
  "version": "0.0.1",
  "private": true,
  "description": "Backend API for VTTMUD",
  "main": "serve.ts",
  "type": "module",
  "scripts": {
    "serve": "ts-node src/serve.ts",
    "build": "webpack --env production build",
    "watch": "npm-watch serve",
    "test": "echo \"Error: no test specified\" && exit 1",
    "migrate": "node-pg-migrate"
