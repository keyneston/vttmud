    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-requests-logger": "^4.0.0",
    "node-pg-migrate": "^6.2.2",
    "pg": "^8.10.0",
    "pg-native": "^3.0.1"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/express-requests-logger": "^3.0.1",
    "@types/pg": "^8.6.6",
    "babel-loader": "^9.1.2",
    "copy-webpack-plugin": "^11.0.0",
